<script src="scripts/customer_chat.js"></script>
<style>
    .chat-list {
        overflow-y: auto;
    }
</style>
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">Customers Support</h4>
    </div>
    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Supports</a></li>
                <li class="breadcrumb-item active">Customers Support</li>
            </ol>
        </div>
    </div>
</div>


<div ng-controller="CustomerChatController">
    <div class="row">
        <div class="col-12">
            <div class="card m-b-0">
                <!-- .chat-row -->
                <div class="chat-main-box">
                    <!-- .chat-left-panel -->
                    <div class="chat-left-aside">
                        <div class="open-panel"><i class="ti-angle-right"></i></div>
                        <div class="chat-left-inner" style="height: 389px;">
                            <div class="form-material">
                                <input class="form-control p-2" type="text" placeholder="Search Customer"
                                    ng-model="search">
                            </div>
                            <ul class="chatonline style-none ps ps--theme_default ps--active-y"
                                data-ps-id="05a22471-baec-b180-857f-7e17fd45e22e">
                                <li ng-repeat="customer in customerList | filter:search">
                                    <a href="javascript:void(0)" ng-click="getChatByCustomer(customer._id)">
                                        <img src="https://www.searchpng.com/wp-content/uploads/2019/02/Men-Profile-Image.png"
                                            alt="user-img" class="img-circle"> <span>{{customer.name}} <small
                                                class="text-success">online</small></span></a>
                                </li>
                                <li class="p-t-20" ng-if="customerList.length == 0">
                                    <center>No Customers</center>
                                </li>
                                <li class="p-20"></li>
                                <div class="ps__scrollbar-x-rail" style="left: 0px; bottom: 0px;">
                                    <div class="ps__scrollbar-x" tabindex="0" style="left: 0px; width: 0px;"></div>
                                </div>
                                <div class="ps__scrollbar-y-rail" style="top: 0px; right: 0px; height: 389px;">
                                    <div class="ps__scrollbar-y" tabindex="0" style="top: 0px; height: 233px;"></div>
                                </div>
                            </ul>
                        </div>
                    </div>
                    <!-- .chat-left-panel -->
                    <!-- .chat-right-panel -->
                    <div class="chat-right-aside">
                        <div class="chat-main-header">
                            <div class="p-3 b-b">
                                <h4 class="box-title">Chat Message</h4>
                            </div>
                        </div>
                        <div class="chat-rbox">
                            <ul class="chat-list p-3" style="height: 209px;">
                                <!--chat Row -->
                                <li ng-repeat="chat in currentChat" class="{{chat.from._id == sesssId?'reverse':''}}"
                                    id="chat{{$index}}">
                                    <div ng-if="chat.from._id != sesssId" class="chat-img"><img
                                            src="../assets/images/users/1.jpg" alt="user"></div>
                                    <div class="chat-content">
                                        <h5>{{chat.from._id != sesssId ? chat.to.name:chat.from.name}}</h5>
                                        <div class="box bg-light-info">{{chat.message}}</div>
                                        <div class="chat-time">{{chat.dateTime | date:"hh:mm a"}}</div>
                                    </div>
                                    <div ng-if="chat.from._id == sesssId" class="chat-img"><img
                                            src="../assets/images/users/1.jpg" alt="user"></div>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body border-top">
                            <form ng-submit="newMessage()">
                            <div class="row">
                                <div class="col-9">
                                    <input type="text" placeholder="Type your message here" class="form-control border-0"
                                    ng-model="messageBox" required>
                                </div>
                                <div class="col-3 text-right">
                                    <button type="submit" class="btn btn-info btn-lg"><i
                                            class="fas fa-paper-plane" ></i> Send</button>
                                </div>
                            </div>
                        </form>
                        </div>
                    </div>
                    <!-- .chat-right-panel -->
                </div>
                <!-- /.chat-row -->
            </div>
        </div>
    </div>
</div>